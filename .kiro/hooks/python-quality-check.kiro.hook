{
  "enabled": true,
  "name": "Python Quality Check",
  "description": "Run ruff linting on Python files in python/src/ when saved",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "python/src/**/*.py"
    ]
  },
  "then": {
    "type": "runCommand",
    "command": "cd python && uvx ruff check \"$FILE\""
  }
}
